@model Team

@{
    ViewBag.Title = "Team";
}

<div class="row">
    <div class="col-md-3">
        <div class="thumbnail  alert alert-info">
            <img src="http://fpoimg.com/120x120?text=TEAM" alt="..." class="img-thumbnail">
        </div>
    </div>
    <div class="col-md-6">
        <h4>@Model.TeamName</h4>
        <div class="col-md-6">
            <h4>Code:</h4>
            @Model.TeamNameAb
        </div>
        <div class="col-md-6">
            <h4>Point of Contact: </h4>
            @Model.TeamPOC
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Players</h3>
            </div>
            <div class="panel-body">
                @for (var i = 0; i < 12; i++)
                {
                    <div class="col-md-2">
                        <div class="thumbnail alert alert-success">
                            <img src="http://fpoimg.com/80x80?text=player" alt="..." class="img-thumbnail">
                        </div>
                    </div> 
                }
            </div>
        </div>
    </div>
</div>



