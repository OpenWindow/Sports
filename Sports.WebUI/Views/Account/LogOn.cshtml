@model LogOnViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Log in
    </div>
    <div class="panel-body">
        <section id="loginform">
            @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)  
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-6 controls">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-4 control-label">
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "pull-left" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-6 controls">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-4 control-label">
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "pull-left" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-6">
                            <button type="submit" class="btn btn-primary btn-block btn-sm">Log in</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-6">
                            @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-default btn-block btn-sm" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2"></div>
            }
        </section>
    </div>
</div>
