@model RegisterModel

@{
    ViewBag.Title = "Register";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Create your account
    </div>
    <div class="panel-body">
        <section id="registerform">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DisplayName, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-5 controls">
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-4 control-label">
                                @Html.ValidationMessageFor(m => m.DisplayName, null, new { @class = "pull-left" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-5 controls">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-4 control-label">
                                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "pull-left" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-5 controls">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-4 control-label">
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "pull-left" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-5 controls">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-4 control-label">
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "pull-left" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-5">
                                <button type="submit" class="btn btn-primary btn-block btn-sm">Register</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-5">
                                @Html.ActionLink("Log in", "LogOn", "Account", null, new { @class = "btn btn-default btn-block btn-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

