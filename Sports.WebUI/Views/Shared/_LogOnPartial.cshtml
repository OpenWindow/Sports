@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="user"><i class="glyphicon  glyphicon-user">
            </i>&nbsp;@User.Identity.Name <span
                class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Manage", "Account")"><span class="glyphicon glyphicon-cog"></span>Settings</a>
                </li>
                <li><a href="@Url.Action("LogOff", "Account")"><span class="glyphicon glyphicon-off"></span>Log
                off</a>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "LogOn", "Account")</li>
        <li>@Html.ActionLink("Register", "Register", "Account")</li>
    </ul>
   
}