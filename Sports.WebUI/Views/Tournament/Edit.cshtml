                </div>
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-lg-offset-3 col-lg-9">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back to Tournaments", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('.selectpicker').selectpicker();
    </script>

    <script>
        $(function () {
            var $teams = $("#sortable")

            $("li", $teams).draggable({
                containment: "document",
                helper: "clone",
                cursor: "move"
            });
        });
    </script>
}

@section Styles {
    <style>
        #sortable {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 100%;
        }

        #sortable li {
            margin: 0 3px 3px 3px;
            padding: 0.4em;
            padding-left: 1.5em;
        }
    </style>
}
