@model TournamentModel

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("Edit", "Tournament", FormMethod.Post, new { @class = "well form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tournament</legend>
        @Html.HiddenFor(t => t.TournamentId)
        <div class="form-group">
            @Html.LabelFor(t => t.TournamentName, new { @class = "col-lg-3 control-label" })
            <div class="col-lg-6 controls">
                @Html.TextBoxFor(t => t.TournamentName, new { @class = "form-control" })
            </div>
            <div class="col-lg-3 control-label">
                @Html.ValidationMessageFor(t => t.TournamentName, null, new { @class = "pull-left" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.StartDate, new { @class = "col-lg-3 control-label" })
            <div class="col-lg-6 controls">
                @Html.TextBoxFor(t => t.StartDate, new { @class = "form-control" })
            </div>
            <div class="col-lg-3 control-label">
                @Html.ValidationMessageFor(t => t.StartDate, null, new { @class = "pull-left" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.EndDate, new { @class = "col-lg-3 control-label" })
            <div class="col-lg-6 controls">
                @Html.TextBoxFor(t => t.EndDate, new { @class = "form-control" })
            </div>
            <div class="col-lg-3 control-label">
                @Html.ValidationMessageFor(t => t.EndDate, null, new { @class = "pull-left" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Groups", new { @class = "col-lg-3 control-label" })
            <div class="col-lg-6 controls">
                @Html.DropDownList("GroupNumbers", null, new { @class = "selectpicker", data_width = "80px" })
            </div>
        </div>

        @*<div class="form-group">
            <div class="col-lg-3">
                <ul id="sortable">
                    @foreach (Team t in Model.AllTeams)
                    {
                        <li class="ui-state-default">@t.TeamName</li>
                    }
